<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head')  %>
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/home.css">
    <script src="/js/script.js" defer></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" /> 
</head>
<body>
    <%- include('../partials/header') %> 
    <main>
        <section class="wrapper">
            <h1>Spannend</h1>
            <div class="slider-wrapper">
                <ul>
                    <% if (spannend.length > 0) { %>
                        <% spannend.forEach(book => { %>
                            <a href="boek/<%= book.id %> "> 
                                <% if (book.coverimages[1] !== undefined) { %> 
                                <img src="<%- book.coverimages[1]   %> " alt="kaft van <%= book.titles[0] %> ">
                                <% } %>
                            </a> 
                    <% })} %> 
                </ul>
                <ul id="controls">
                    <li><i class="fa fa-arrow-left"></i></li>
                    <li><i class="fa fa-arrow-right"></i></li>
                </ul>
            </div>
        </section>

        <section class="wrapper">
            <h1>Monsters</h1>
            <div class="slider-wrapper">
                <ul>
                    <% if (spannend.length > 0) { %>
                        <% monsters.forEach(book => { %>
                            <a href="boek/<%= book.id %> "> 
                                <% if (book.coverimages[1] !== undefined) { %> 
                                <img src="<%- book.coverimages[1]   %> " alt="kaft van <%= book.titles[0] %> ">
                                <% } %>
                            </a> 
                    <% })} %> 
                </ul>
                <ul id="controls">
                    <li><i class="fa fa-arrow-left"></i></li>
                    <li><i class="fa fa-arrow-right"></i></li>
                </ul>
            </div>
        </section>

        <section class="wrapper">
            <h1>Prinsessen</h1>
             <div class="slider-wrapper">
                <ul>
                    <% if (spannend.length > 0) { %>
                        <% prinsessen.forEach(book => { %>
                            <a href="boek/<%= book.id %> "> 
                                <% if (book.coverimages[1] !== undefined) { %> 
                                <img src="<%- book.coverimages[1]   %> " alt="kaft van <%= book.titles[0] %> ">
                                <% } %>
                            </a> 
                    <% })} %> 
                </ul>
                <ul id="controls">
                    <li><i class="fa fa-arrow-left"></i></li>
                    <li><i class="fa fa-arrow-right"></i></li>
                </ul>
            </div>
        </section>

    </main>
    <aside>
        <header>
            <h1>Mijn Boekenkast</h1>
        </header>
        <ul>
            <% if (spannend.length > 0) { %>
                <% spannend.forEach(book => { %>
                    <li>
                        <div class="deleteMyBook">
                            <span></span>
                            <span></span>
                        </div>
                    <a href="boek/<%= book.id %> "> 
                        <% if (book.coverimages[1] !== undefined) { %> 
                        <img src="<%- book.coverimages[1]   %> " alt="kaft van <%= book.titles[0] %> ">
                        <% } %>
                    </a> 

                    </li>
            <% })} %> 
        </ul>
    </aside>
</body>
</html>